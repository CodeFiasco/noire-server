<div class="ui stripe">
    <div class="ui row">
        <h4 class="ui horizontal divider header">
            <i class="users icon"></i>
            Users
        </h4>

        <table class="ui celled table">
            <thead>
                <tr>
                    <th>User</th>
                    <th>Name</th>
                    <th>Email</th>
                </tr>
            </thead>
            <tbody>
                {{#each users}}
                    {{#if this.active}}
                        <tr>
                    {{else}}
                        <tr class="disabled">
                    {{/if}}
                        <td>{{this.username}}</td>
                        <td>{{this.name}}</td>
                        <td>{{this.email}}</td>
                    </tr>
                {{/each}}
            </tbody>
        </table>
    </div>
</div>
