<div class="register">
    <div class="ui centered grid container">
        <div class="six wide computer eight wide tablet sixteen wide phone column">
            <div class="ui segment">
                <div class="content">
                    <div class="ui centered large header">Registration Form</div>
                    <form class="ui large form" novalidate>
                        <div class="required field">
                            <div class="ui left icon input">
                                <input id="form-name" name="name" type="text" placeholder="full name">
                                <i class="address card icon"></i>
                            </div>
                        </div>
                        <div class="required field">
                            <div class="ui left icon input">
                                <input id="form-signup" name="email" type="text" placeholder="email">
                                <i class="envelope icon"></i>
                            </div>
                        </div>
                        <div class="required field">
                            <div class="ui left icon input">
                                <input id="form-username" name="username" type="text" placeholder="username">
                                <i class="user icon"></i>
                            </div>
                        </div>
                        <div class="required field">
                            <div class="ui left icon input">
                                <input id="form-password" name="password" type="password" placeholder="password">
                                <i class="lock icon"></i>
                            </div>
                        </div>
                        <div class="field">
                            <div class="ui toggle checkbox">
                                <input id="show-password" type="checkbox">
                                <label for="show-password">Show Password</label>
                            </div>
                        </div>
                        <div class="field">
                            <input type="submit" value="Register" class="ui submit button large fluid primary" disabled>
                        </div>
                        <div class="ui icon error message">
                            <i class="attention circle icon"></i>
                            <div class="content"></div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
