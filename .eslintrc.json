{
    "extends": "eslint:recommended",
    "parserOptions": {
        "ecmaVersion": 5
    },
    "env": {
        "node": 1
    },
    "globals": {},
    "rules": {
        "strict": [2, "global"],
        "indent": ["error", 4],
        "linebreak-style": ["error", "unix"],
        "semi": [2, "always"],
        "quotes": [2, "single", "avoid-escape"],
        "eqeqeq": [2, "smart"],
        "brace-style": [2, "stroustrup"],
        "space-before-function-paren": [1, "never"],
        "space-before-blocks": [1, "always"],
        "no-console": "off",
        "key-spacing": [2, {
            "beforeColon": false,
            "afterColon": true,
            "mode": "minimum"
        }],
        "new-cap": [2, {
            "properties": false
        }]
    },
    "plugins": []
}
