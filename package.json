{
    "name": "noire-server",
    "version": "0.5.4",
    "description": "Noire Server",
    "main": "lib/index.js",
    "keywords": [
        "hapi",
        "boilerplate"
    ],
    "scripts": {
        "start": "NODE_PATH=$NODE_PATH:lib:. node lib/index.js",
        "watch": "NODE_PATH=$NODE_PATH:lib:. DEBUG=true nodemon --watch lib lib/index.js",
        "test": "NODE_PATH=$NODE_PATH:lib:. lab",
        "codecov": "mkdir .coverage 2>/dev/null; NODE_PATH=$NODE_PATH:lib:. lab -r lcov > .coverage/lcov.info && codecov",
        "reset": "NODE_PATH=$NODE_PATH:lib:. node lib/utils/reset.js",
        "secret": "NODE_PATH=$NODE_PATH:lib:. node lib/utils/auth.js secret",
        "token": "NODE_PATH=$NODE_PATH:lib:. node lib/utils/auth.js token",
        "semantic": "gulp --gulpfile client/semantic/gulpfile.js build",
        "webpack": "NODE_PATH=$NODE_PATH:lib:. webpack --hide-modules true --config webpack/webpack.dev.js",
        "webpack:prod": "NODE_PATH=$NODE_PATH:lib:. webpack --config webpack/webpack.prod.js",
        "build": "npm run clean; npm run semantic; npm run webpack:prod",
        "clean": "rm -rf client/dist/; rm -rf client/semantic/dist"
    },
    "repository": {
        "type": "git",
        "url": "https://github.com/academia-de-codigo/noire-server.git"
    },
    "author": "Academia de CÃ³digo",
    "license": "MIT",
    "bugs": {
        "url": "https://github.com/academia-de-codigo/noire-server/issues"
    },
    "homepage": "https://github.com/academia-de-codigo/noire-server",
    "dependencies": {
        "bcrypt": "^3.0.0",
        "boom": "^7.2.0",
        "chalk": "^2.4.1",
        "crumb": "^7.1.0",
        "dotenv": "^6.0.0",
        "exiting": "^4.0.0",
        "glue": "^5.0.0",
        "handlebars": "^4.0.12",
        "hapi": "^17.5.4",
        "hapi-auth-jwt2": "^8.1.0",
        "hapi-pagination": "^2.0.1",
        "hapi-pino": "^5.0.1",
        "hoek": "^5.0.4",
        "html-to-text": "^4.0.0",
        "inert": "^5.1.0",
        "joi": "^13.6.0",
        "jsonwebtoken": "^8.3.0",
        "knex": "^0.15.2",
        "lout": "^11.1.0",
        "nodemailer": "^4.6.8",
        "objection": "^1.2.6",
        "pg": "^7.4.3",
        "pino": "^5.5.0",
        "sqlite3": "^4.0.2",
        "vision": "^5.4.0",
        "webpack-cli": "^3.1.0"
    },
    "devDependencies": {
        "clean-webpack-plugin": "^0.1.19",
        "code": "^5.2.0",
        "codecov": "^3.1.0",
        "copy-webpack-plugin": "^4.5.2",
        "css-loader": "^1.0.0",
        "eslint-config-prettier": "^3.0.1",
        "expose-loader": "^0.7.5",
        "file-loader": "^2.0.0",
        "form-serializer": "^2.5.0",
        "glob": "^7.1.3",
        "gulp": "^3.9.1",
        "html-minifier": "^3.5.20",
        "html-webpack-plugin": "^3.2.0",
        "imports-loader": "^0.8.0",
        "jquery": "^3.3.1",
        "lab": "^16.0.0",
        "mini-css-extract-plugin": "^0.4.2",
        "mock-require": "^3.0.2",
        "nodemon": "^1.18.4",
        "optimize-css-assets-webpack-plugin": "^5.0.1",
        "prettier": "^1.14.2",
        "prettier-eslint": "^8.8.2",
        "qs": "^6.5.2",
        "semantic-ui": "^2.3.3",
        "simple-progress-webpack-plugin": "^1.1.2",
