    "chalk": "^2.3.0",
    "crumb": "^6.0.3",
    "exiting": "github:ferrao/exiting",
    "glue": "^5.0.0",
    "good": "^7.3.0",
    "good-console": "^6.4.0",
    "good-squeeze": "^5.0.2",
    "handlebars": "^4.0.11",
    "hapi": "^17.0.1",
    "hapi-auth-jwt2": "^7.3.0",
    "hapijs-status-monitor": "github:ziyasal/hapijs-status-monitor#multiple-connections",
    "hoek": "^5.0.1",
    "inert": "^5.0.1",
    "joi": "^13.0.1",
    "jsonwebtoken": "^8.1.0",
    "knex": "^0.14.0",
    "lout": "^10.0.3",
    "mock-require": "^2.0.2",
    "objection": "^0.9.0",
    "pg": "^7.4.0",
