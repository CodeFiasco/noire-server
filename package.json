{
    "name": "noire-server",
    "version": "0.5.0",
    "description": "Noire Server",
    "main": "lib/index.js",
    "keywords": ["hapi", "boilerplate"],
    "scripts": {
        "start": "NODE_PATH=$NODE_PATH:lib:. node lib/index.js",
        "watch": "NODE_PATH=$NODE_PATH:lib:. DEBUG=true nodemon --watch lib lib/index.js",
        "test": "NODE_PATH=$NODE_PATH:lib:. lab",
        "codecov":
            "mkdir .coverage 2>/dev/null; NODE_PATH=$NODE_PATH:lib:. lab -r lcov > .coverage/lcov.info && codecov",
        "reset": "knex migrate:latest; knex seed:run",
        "secret": "NODE_PATH=$NODE_PATH:lib:. node lib/utils/auth.js secret",
        "token": "NODE_PATH=$NODE_PATH:lib:. node lib/utils/auth.js token",
        "semantic": "gulp --gulpfile client/semantic/gulpfile.js build",
        "webpack": "webpack --hide-modules true --config webpack/webpack.dev.js",
        "webpack:prod": "webpack --config webpack/webpack.prod.js",
        "build": "npm run clean; npm run semantic; npm run webpack:prod",
        "clean": "rm -rf client/dist/; rm -rf client/semantic/dist"
    },
    "repository": {
        "type": "git",
        "url": "https://github.com/academia-de-codigo/noire-server.git"
    },
    "author": "Academia de CÃ³digo",
    "license": "MIT",
    "bugs": {
        "url": "https://github.com/academia-de-codigo/noire-server/issues"
    },
    "homepage": "https://github.com/academia-de-codigo/noire-server",
    "dependencies": {
        "bcrypt": "^2.0.1",
        "boom": "^7.2.0",
        "crumb": "^7.0.0",
        "dotenv": "^5.0.1",
        "exiting": "^4.0.0",
        "glue": "^5.0.0",
        "handlebars": "^4.0.11",
        "hapi": "^17.3.1",
        "hapi-auth-jwt2": "^8.1.0",
        "hapi-pagination": "^2.0.0",
        "hapi-pino": "^4.0.4",
        "hoek": "^5.0.3",
        "html-to-text": "^4.0.0",
        "inert": "^5.1.0",
        "joi": "^13.2.0",
        "jsonwebtoken": "^8.2.1",
        "knex": "0.14.6",
        "lout": "^11.0.0",
        "nodemailer": "^4.6.4",
        "objection": "^1.1.7",
        "pg": "^7.4.1",
        "pino": "^4.16.1",
        "sqlite3": "^4.0.0",
        "vision": "^5.3.2"
    },
    "devDependencies": {
        "clean-webpack-plugin": "^0.1.19",
        "code": "^5.2.0",
        "codecov": "^3.0.0",
        "copy-webpack-plugin": "^4.5.1",
        "css-loader": "^0.28.11",
        "eslint-config-prettier": "^2.9.0",
        "expose-loader": "^0.7.5",
        "file-loader": "^1.1.11",
        "form-serializer": "^2.5.0",
        "glob": "^7.1.2",
        "gulp": "^3.9.1",
        "html-minifier": "^3.5.15",
        "html-webpack-plugin": "^3.2.0",
        "imports-loader": "^0.8.0",
        "jquery": "^3.3.1",
        "lab": "^15.4.1",
        "mini-css-extract-plugin": "^0.4.0",
        "mock-require": "^3.0.2",
        "nodemon": "^1.17.3",
        "optimize-css-assets-webpack-plugin": "^4.0.0",
        "prettier": "^1.12.1",
        "prettier-eslint": "^8.8.1",
        "qs": "^6.5.1",
        "semantic-ui": "^2.3.1",
        "simple-progress-webpack-plugin": "^1.1.2",
        "sinon": "^4.5.0",
        "style-loader": "^0.21.0",
